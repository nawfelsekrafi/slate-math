{
  "private": true,
  "name": "plate-playground",
  "description": "A simple sandbox to reproduce Plate issues in a pared down editor.",
  "keywords": [
    "slate",
    "react",
    "plate",
    "rich-text-editor",
    "wysiwyg"
  ],
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "main": "index.js",
  "dependencies": {
    "@babel/core": "7.14.6",
    "@styled-icons/boxicons-regular": "10.23.0",
    "@styled-icons/foundation": "10.28.0",
    "@styled-icons/material": "10.28.0",
    "@tippyjs/react": "4.2.5",
    "@udecode/plate": "^8.3.1",
    "@udecode/plate-alignment": "^7.0.2",
    "@udecode/plate-alignment-ui": "^7.0.2",
    "@udecode/plate-combobox": "^8.3.0",
    "@udecode/plate-core": "^8.3.0",
    "@udecode/plate-excalidraw": "3.1.3",
    "@udecode/plate-mention": "^8.3.0",
    "@udecode/plate-mention-ui": "^8.3.0",
    "@udecode/plate-test-utils": "1.0.0",
    "@udecode/plate-ui-toolbar": "^9.0.0",
    "babel-plugin-macros": "3.1.0",
    "babel-plugin-styled-components": "1.10.5",
    "babel-plugin-twin": "1.0.2",
    "faker": "4.1.0",
    "react-dom": "17.0.1",
    "slate": "0.66.1",
    "slate-history": "0.66.0",
    "slate-hyperscript": "0.66.0",
    "slate-react": "0.66.1",
    "tailwindcss": "2.2.4",
    "twin.macro": "2.6.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.4.14",
    "@storybook/addon-essentials": "^6.4.14",
    "@storybook/addon-links": "^6.4.14",
    "@storybook/node-logger": "^6.4.14",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.4.14",
    "@styled-icons/simple-icons": "^10.45.0",
    "@types/katex": "^0.11.1",
    "@types/react": "^17.0.25",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.14",
    "katex": "^0.13.24",
    "react": "^17.0.1",
    "react-scripts": "^4.0.3",
    "styled-components": "^5.3.1",
    "typescript": "^4.4.3"
  },
  "babelMacros": {
    "twin": {
      "preset": "styled-components"
    }
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
